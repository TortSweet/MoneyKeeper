<div class="table-responsive">
    <table class="table table-striped table-primary text-center" style="width:100%">
        <thead>
        <tr>
            <th class="col-2">Id</th>
            <th class="col-2">Category Id</th>
            <th class="col-5">Description</th>
            <th class="col-2"><span class="text-success">Amount</span></th>
            <th class="col-2"><span class="text-info">Date</span></th>
        </tr>
        </thead>
        <tbody>
        @if (Report == null)
        {
            <tr>
                <th>No item in array</th>
            </tr>
        }
        else
        {
            if (Report.ListOfOperations != null && Report.ListOfOperations.Count != 0)
            {

                @foreach (var item in Report.ListOfOperations)
                {
                    <tr>
                        <th>@item.OperationId</th>
                        <th>@item.FinancialCategoryId</th>
                        <th>@item.Description</th>
                        <th>@item.Amount</th>
                        <th>@item.Date.ToString("dd.MM.yyyy")</th>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <th>No Money Operations</th>
                </tr>
            }
            @if (Report == null)
            {
                <tr>
                    <th class="col-6">Total Income: <span class="text-success">0</span></th>
                    <th class="col-6">Total Expense: <span class="text-danger">0</span> </th>
                </tr>
            }
            else
            {
                <tr>
                    <th class="col-6">Total Income: <span class="text-success">@Report.TotalIncome</span></th>
                    <th class="col-6">Total Expense: <span class="text-danger">@Report.TotalExpense</span> </th>
                </tr>
            }
        }
        </tbody>
    </table>
</div>