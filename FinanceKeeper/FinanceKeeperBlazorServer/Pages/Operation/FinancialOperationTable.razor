<div class="col-8">
    <a href="/financialoperation/addoperation">Add operation</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-primary text-center">
        <thead>
        <tr>
            <th class="col-6">Id</th>
            <th class="col-6">Description</th>
            <th class="col-6">Amount</th>
            <th class="col-6">Date</th>
            <th class="col-6">Category</th>
            <th class="col-6">Options</th>
        </tr>
        </thead>
        <tbody>
        @if (Operations == null)
        {
            <tr>
                <th>No item in array</th>
            </tr>
        }
        else
        {
            @foreach (var item in Operations)
            {
                <tr>
                    <th class="text-success" name="Id">@item.OperationId</th>
                    <th class="text-success" name="Name">@item.Description</th>
                    <th class="text-success" name="Type">@item.Amount</th>
                    <th class="text-success" name="Type">@item.Date</th>
                    <th class="text-success" name="Type">@item.FinancialCategoryId</th>

                    <th><a href="/financialoperation/editoperation/@item.OperationId">Edit</a>
                        <button class="btn btn-close" @onclick="(() => Delete(item.OperationId))"></button></th>
                </tr>

            }
        }
        </tbody>
    </table>
</div>
